<div class="bg-gray-100 dark:bg-gray-800 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row -mx-4">
      <div class="md:flex-1 px-4">
        <!-- Slideshow for Product Images -->
        <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4 overflow-hidden">
          <!-- Loop through each product image and render in the slideshow -->
          <% if @product.images.attached? %>
            <div class="flex transition-transform ease-in-out duration-500">
              <% @product.images.each do |image| %>
                <img class="w-full h-full object-cover transform transition-transform" src="<%= rails_blob_url(image) %>" alt="Product Image">
              <% end %>
            </div>
          <% else %>
            <!-- Add a placeholder image if no images are attached -->
            <img class="w-full h-full object-cover" src="https://cdn.pixabay.com/photo/2020/05/22/17/53/mockup-5206355_960_720.jpg" alt="Product Image">
          <% end %>
        </div>
        <!-- Add to Cart and Wishlist buttons -->
        <div class="flex -mx-2 mb-4">
          <div class="w-1/2 px-2">
            <button class="w-full bg-gray-900 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700">Add to Cart</button>
          </div>
          <div class="w-1/2 px-2">
            <button class="w-full bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white py-2 px-4 rounded-full font-bold hover:bg-gray-300 dark:hover:bg-gray-600">Add to Wishlist</button>
          </div>
        </div>
      </div>
      <div class="md:flex-1 px-4">
        <!-- Product Name -->
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2"><%= @product.name %></h2>
        <!-- Product Description -->
        <p class="text-gray-600 dark:text-gray-300 text-sm mb-4"></p>
        <!-- Product Price and Availability -->
        <div class="flex mb-4">
          <div class="mr-4">
            <span class="font-bold text-gray-700 dark:text-gray-300">Price:</span>
            <span class="text-gray-600 dark:text-gray-300"><%= number_to_currency(@product.price) %></span>
          </div>
          <div>
            <span class="font-bold text-gray-700 dark:text-gray-300">Availability:</span>
           </div>
        </div>
        <!-- Select Color and Size -->
        <div class="mb-4">
          <span class="font-bold text-gray-700 dark:text-gray-300">Select Color:</span>
          <!-- Render color options -->
          <div class="flex items-center mt-2">
            <!-- Add color buttons dynamically based on product color options -->
          </div>
        </div>
        <div class="mb-4">
          <span class="font-bold text-gray-700 dark:text-gray-300">Select Size:</span>
          <!-- Render size options -->
          <div class="flex items-center mt-2">
            <!-- Add size buttons dynamically based on product size options -->
          </div>
        </div>
        <!-- Product Description -->
        <div>
          <span class="font-bold text-gray-700 dark:text-gray-300">Product Description:</span>
          <p class="text-gray-600 dark:text-gray-300 text-sm mt-2"></p>
        </div>
      </div>
    </div>
  </div>
</div>
